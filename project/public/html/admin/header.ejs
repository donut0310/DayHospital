      const index = target.parentNode;

      for ( var i=0; i<li.length;i++){
        li[i].className = "";
      }

      li[index.id-1].className = "active";
      } // function handleClick

    function init(){
      //li[0].className = "active";
      for ( var i =0; i < li.length; i++){
      li[i].addEventListener("click",handleClick);
      }
    }

