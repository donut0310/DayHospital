<script>
  
  function liActive(){
    const li = document.querySelectorAll('li');
    //console.log(window.location.href);
    const link = window.location.href;
    let id;

    if (link.indexOf("/prepostlist")>-1) id = "prepostlist";
    if (link.indexOf("/consulting")>-1) id = "consulting";
    if (link.indexOf("/customer")>-1) id = "customer";
    if (link.indexOf("/img")>-1) id = "img";
    if (link.indexOf("/meal")>-1) id = "meal";
    if (link.indexOf("/postlist")>-1) id = "postlist";

    for(let i=0;i<li.length;i++){
      if (li[i].id == id) li[i].className = "active";

    }
  }
  liActive();

</script>

